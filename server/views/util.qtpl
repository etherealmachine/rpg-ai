{% import (
  "encoding/json"
  "time"

  "github.com/nleeper/goment"
)
%}

{% code
func JSON(v interface{}) string {
  bs, err := json.Marshal(v)
  if err != nil {
    panic(err)
  }
  return string(bs)
}

func Goment(t time.Time) *goment.Goment {
  g, err := goment.New(t)
  if err != nil {
    panic(err)
  }
  return g
}
%}